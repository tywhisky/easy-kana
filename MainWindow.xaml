            <Border BorderBrush="DarkGray" BorderThickness="0,0,3,0" Grid.Row="0" Grid.Column="5" Background="LightGray">
                <Button Click="PlayVoice" Tag="o" Background="Transparent" Height="Auto" Width="Auto" BorderThickness="0" Padding="0">

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
