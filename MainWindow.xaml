<Window x:Class="EasyKana.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyKana"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        ResizeMode="CanMinimize"
        Title="EasyKana"
        Height="720" 
        Width="1000">
    <Window.Resources>
        <!-- Global Styles -->
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <!-- Specially Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#747474" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#747474" />
            <Setter Property="FontWeight" Value="Normal" />
        </Style>

        <Style x:Key="HiraganaTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="HiraganaBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#3db976" />
            <Setter Property="Padding" Value="4 0 4 0"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <Style x:Key="KatakanaTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="KatakanaBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#618ab8" />
            <Setter Property="Padding" Value="4 0 4 0"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Grid Canvas.ZIndex="2"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="9">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.Effect>
                <DropShadowEffect Color="LightGray" BlurRadius="8" Direction="-90" RenderingBias="Quality" ShadowDepth="1"/>
            </Grid.Effect>

            <Border BorderBrush="DarkGray" BorderThickness="0,0,3,0" Grid.Row="0" Grid.Column="0" Background="LightGray">
                <TextBlock Text="Romaji" FontSize="14"  Style="{StaticResource HeaderTextStyle}" VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="DarkGray" BorderThickness="0,0,3,0" Background="LightGray" Grid.Row="0" Grid.Column="1">
                <Button Click="PlayVoice" Tag="a" Background="Transparent" Height="Auto" Width="Auto" BorderThickness="0" Padding="0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="A" FontSize="28" Margin="0 0 5 0"  Style="{StaticResource HeaderTextStyle}" VerticalAlignment="Center"/>
                        <StackPanel VerticalAlignment="Center">
                            <Border Style="{StaticResource HiraganaBorderStyle}">
                                <TextBlock Text="あ" Style="{StaticResource HiraganaTextStyle}" />
                            </Border>
                            <Separator/>
                            <Border Style="{StaticResource KatakanaBorderStyle}">
                                <TextBlock Text="ア" Style="{StaticResource KatakanaTextStyle}"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Button>
            </Border>
            <Border BorderBrush="DarkGray" BorderThickness="0,0,3,0" Grid.Row="0" Grid.Column="2" Background="LightGray">
                <Button Click="PlayVoice" Tag="i" Background="Transparent" Height="Auto" Width="Auto" BorderThickness="0" Padding="0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="I" FontSize="28" Margin="0 0 5 0"  Style="{StaticResource HeaderTextStyle}" VerticalAlignment="Center"/>
                        <StackPanel VerticalAlignment="Center">
                            <Border Style="{StaticResource HiraganaBorderStyle}">
                                <TextBlock Text="い" Style="{StaticResource HiraganaTextStyle}" />
                            </Border>
                            <Separator/>
                            <Border Style="{StaticResource KatakanaBorderStyle}">
                                <TextBlock Text="イ" Style="{StaticResource KatakanaTextStyle}"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Button>
            </Border>
            <Border BorderBrush="DarkGray" BorderThickness="0,0,3,0" Grid.Row="0" Grid.Column="3" Background="LightGray">
                <Button Click="PlayVoice" Tag="u" Background="Transparent" Height="Auto" Width="Auto" BorderThickness="0" Padding="0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="U" FontSize="28" Margin="0 0 5 0"  Style="{StaticResource HeaderTextStyle}" VerticalAlignment="Center"/>

                        <StackPanel VerticalAlignment="Center">
                            <Border Style="{StaticResource HiraganaBorderStyle}">
                                <TextBlock Text="う" Style="{StaticResource HiraganaTextStyle}" />
                            </Border>
                            <Separator/>
                            <Border Style="{StaticResource KatakanaBorderStyle}">
                                <TextBlock Text="ウ" Style="{StaticResource KatakanaTextStyle}"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Button>
            </Border>
            <Border BorderBrush="DarkGray" BorderThickness="0,0,3,0" Grid.Row="0" Grid.Column="4"  Background="LightGray">
                <Button Click="PlayVoice" Tag="e" Background="Transparent" Height="Auto" Width="Auto" BorderThickness="0" Padding="0">

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
